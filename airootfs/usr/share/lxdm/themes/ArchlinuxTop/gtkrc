style "back"
{
	engine "pixmap"
	{
		image
		{
			function = FLAT_BOX
			shadow=NONE
			state = NORMAL
			file="Background.png"
			stretch=TRUE
			detail = "base"
		}
	}
}

style "time"
{
	fg[NORMAL]="#ffffff"
	font_name="Sans 12"
}

style "prompt"
{
	fg[NORMAL]="#b5b5b5"
	font_name="Sans Bold 12"
}

# Normally this won't paint an invisible event box, but we did some hacks in greeter.c.
style "bottom"
{
	font_name="Sans 11"
	fg[NORMAL] = "#b5b5b5"
	engine "pixmap"
	{
		image
		{
			function = FLAT_BOX
			file="shade.png"
			stretch=TRUE
			detail="eventbox"
		}
	}
}

style "login"
{
	font_name="Sans 11"
	fg[NORMAL] = "#b5b5b5"
	engine "pixmap"
	{
		image
		{
			function = FLAT_BOX
			file="shade.png"
			stretch=TRUE
			detail="eventbox"
		}
	}
}

widget "lxdm" style "back"
widget "lxdm.*.time" style "time"
widget "lxdm.*.prompt" style "prompt"
widget "lxdm.*.bottom_pane" style "bottom"
widget "lxdm.*.login_pane" style "login"
widget_class "GtkWindow.*.GtkEventBox.*.<GtkLabel>" style "bottom"
